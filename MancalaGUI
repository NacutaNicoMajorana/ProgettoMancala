import javax.swing.*;
import java.awt.*;

public class MancalaGUI extends JFrame {
    private JButton[] pits = new JButton[12];
    private JLabel[] stores = new JLabel[2];

    public MancalaGUI() {
        setTitle("Mancala");
        setSize(1100, 400);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLayout(new BorderLayout());

        JPanel boardPanel = new JPanel(new GridLayout(2, 6));
        for (int i = 0; i < 12; i++) {
            pits[i] = new JButton("4");
            pits[i].setBackground(Color.LIGHT_GRAY);
            boardPanel.add(pits[i]);
        }

        stores[0] = new JLabel("0", SwingConstants.CENTER);
        stores[0].setPreferredSize(new Dimension(80, 200));
        stores[0].setBorder(BorderFactory.createLineBorder(Color.BLACK));

        stores[1] = new JLabel("0", SwingConstants.CENTER);
        stores[1].setPreferredSize(new Dimension(80, 200));
        stores[1].setBorder(BorderFactory.createLineBorder(Color.BLACK));

        add(stores[0], BorderLayout.WEST);
        add(boardPanel, BorderLayout.CENTER);
        add(stores[1], BorderLayout.EAST);

        setVisible(true);
    }

    public static void main(String[] args) {
        new MancalaGUI();
    }
}
